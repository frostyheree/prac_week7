BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_mile
            text: "0"
            font_size: 46
            multiline: False
            on_text: app.handle_calculation()
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.25
            Button:
                id: up
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                id: down
                text: "Down"
                on_press: app.handle_increment(-1)
    Button:
        text: "Convert miles to km"
        on_press: app.handle_calculation()
    Label:
        text: app.km_shows
